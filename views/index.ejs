<%- include("partials/header.ejs") %>
<style>
.grid-container {
    display: grid;
    grid-template-rows: auto auto auto;
    background-color: #2196F3;
    padding: 10px;
    margin: 50px auto;
    max-width: 400px;
    /* overflow: hidden; */
}

.grid-item {
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 0, 0, 0.8);
    padding: 20px;
    font-size: 30px;
    text-align: center;
    display: flex;
}
input.largcheckbox {
    width: 25px;
    height: 25px;
}
p{
    padding-left: 10px;
}
input.text{
    width: 350px;
    height: 30px;
    font-size: large;
    border-radius: 10px;
    text-align: center;
}
input.submit{
    width: 50px;
    height: 30px;
    border-radius: 10px;
}
h1{
    margin-top: 20px;
    margin-bottom: 40px;
}

</style>
    <center>
        <body>
            <h1>To-Do List for <%=new Date()%></h1>
            <form action="/" method="POST">
                <input class="text" type="text" name="newItem" placeholder="Enter your task.....">
                <input class="submit" type="submit" value="OK">
            </form>
            <%
        function createNewRow(newItem) { 
            // const newItem = document.createElement(''); 
            // newItem.textContent = item;
            todoList.push(newItem);
            %>
            <div class="grid-container">
            <%todoList.forEach((element) => {%>
                <form>
                    <div class="grid-item"><input class="largcheckbox" type="checkbox" id="<%=element%>" name="<%=element%>">
                    <p for="<%=element%>">
                        <%=element%></p></div>
                <%});%><%}%>
            </div>
            <% if (locals.nextItem){  
            createNewRow(nextItem);
         }else{ 
            %>
            <div class="grid-container">
            <%todoList.forEach((element) => {%>
                <form>
                    <div class="grid-item"><input class="largcheckbox" type="checkbox" id="<%=element%>" name="<%=element%>">
                    <p for="<%=element%>">
                        <%=element%></p></div>
                <%});%><%}%>
                </body>
                </center>
                <%- include("partials/footer.ejs") %>